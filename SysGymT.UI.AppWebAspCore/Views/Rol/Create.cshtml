@model SysGymT.EntidadesDeNegocio.Rol

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/Rol/Create.css">
</head>


<div class="row">
    <div class="col-md-4 offset-md-4 main-div text-center">
        <form asp-action="Create">
            <h4 class="create-title">Agregar Rol</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-warning" />

                <a asp-action="Index" class="btn btn-danger ml-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>