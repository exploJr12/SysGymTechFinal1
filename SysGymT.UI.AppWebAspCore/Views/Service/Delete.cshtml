@model SysGymT.EntidadesDeNegocio.Service

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/services/windows.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11">

<div class="main-div">
    <h3>Se eliminará el siguiente registro:</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name_Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name_Service)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descryption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descryption)
        </dd>
    </dl>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="Id_Service" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        |
        <a asp-action="Index" class="btn btn-warning">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var deleteForm = document.getElementById("deleteForm");

            if (deleteForm) {
                deleteForm.addEventListener("submit", function (event) {
                    event.preventDefault();

                    Swal.fire({
                        title: '¿Estás seguro?',
                        text: 'Esta acción no se puede deshacer',
                        icon: 'warning',
                        iconColor: '#000',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#000',
                        confirmButtonText: 'Sí, eliminarlo',
                        background: '#ffc107'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Si se confirma, enviar el formulario
                            deleteForm.submit();
                        }
                    });
                });
            }
        });
    </script>
}
