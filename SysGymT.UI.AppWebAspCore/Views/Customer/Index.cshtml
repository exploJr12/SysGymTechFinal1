@model IEnumerable<SysGymT.EntidadesDeNegocio.Customer>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Clientes</title>
    <link rel="stylesheet" href="~/css/customer/index.css">
</head>
<body>
    <h1>Lista de Clientes</h1>
    <p>
        <a asp-action="Create" class="btn btn-warning">Crear</a>
    </p>
    <div class="main-container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name_Customer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Last_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DUI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telephone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Weight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Height)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Membership)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name_Customer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Last_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DUI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telephone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Weight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Height)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Membership)
                        </td>
                        <td>
                        <td class="botonestabla">
                            <a asp-action="Edit" asp-route-Id_Customer="@item.Id_Customer" class="edit-button">
                                <img src="~/img/machines/editar.png" class="image-inside-button" />
                            </a>
                        </td>

                        <td class="botonestabla">
                            <a asp-action="Details" asp-route-Id_Customer="@item.Id_Customer" class="btn btn-info see-button">
                                <img src="~/img/machines/see-icon.png" class="image-inside-button" />
                            </a>
                        </td>

                        <td class="botonestabla">
                            <a asp-action="Delete" asp-route-Id_Customer="@item.Id_Customer" class="btn btn-danger delete-button">
                                <img src="~/img/machines/trash-icon.png" class="image-inside-button" />
                            </a>
                        </td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
