@model SysGymT.EntidadesDeNegocio.Usuario

@{
    ViewData["Title"] = "Edit";
    List<SysGymT.EntidadesDeNegocio.Rol> roles = ViewBag.Roles;
}

<link rel="stylesheet" href="~/css/machines/create.css">


<div class="row">
    <div class="col-md-4 offset-md-4 main-div text-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Usuario" />
            <div class="form-group">
                <label asp-for="Id_Rol" class="control-label"></label>
                <select asp-for="Id_Rol" class="form-control">
                    @foreach (var item in roles)
                    {
                        <option value="@item.Id_Rol">@item.Name</option>
                    }

                </select>
                <span asp-validation-for="Id_Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Completo" class="control-label"></label>
                <input asp-for="Nombre_Completo" class="form-control" />
                <span asp-validation-for="Nombre_Completo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Estatus" class="control-label"></label>
                <input asp-for="Estatus" class="form-control" />
                <span asp-validation-for="Estatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-danger ml-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>