@model SysGymT.EntidadesDeNegocio.Machines

@{
    ViewData["Title"] = "Delete";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link rel="stylesheet" href="~/css/machines/create.css">

<div class="row main-div text-center">
    <h3>Se eliminará el siguiente registro:</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_Usuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Machines_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Machines_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Serial_Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Serial_Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acquisition_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acquisition_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Maintenance_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maintenance_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Next_Maintenance_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Next_Maintenance_Date)
        </dd>
    </dl>

    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id_Machines" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Eliminar</button>
        <a asp-action="Index" class="btn btn-warning ml-2" id="cancelButton">Volver a la lista</a>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Esta acción no se puede deshacer',
                icon: 'warning',
                iconColor: '#000',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#000',
                confirmButtonText: 'Sí, eliminarlo',
                background: '#ffc107'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("deleteForm").submit();
                }
            });
        }
    </script>
}
